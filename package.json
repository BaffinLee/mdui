{
  "private": true,
  "scripts": {
    "preinstall": "npx -y only-allow pnpm",
    "lint:shared": "eslint --fix packages/shared/src/**/*.ts",
    "lint:jq": "eslint --fix packages/jq/src/**/*.ts",
    "lint:components": "stylelint --fix packages/components/src/**/*.less && eslint --fix packages/components/src/**/*.ts",
    "lint:themes": "stylelint --fix packages/themes/**/*.less",
    "lint": "npm-run-all lint:*",
    "clean:shared": "rimraf packages/shared/{controllers,decorators,directives,helpers,icons,mixins} packages/shared/*.{js,js.map,d.ts,d.ts.map}",
    "clean:jq": "rimraf packages/jq/{functions,methods,shared,static} packages/jq/*.{js,js.map,d.ts,d.ts.map}",
    "clean:components": "rimraf packages/components/{button,checkbox,icon,link,surface} packages/components/*.{js,js.map,d.ts,d.ts.map} packages/components/src/**/*style.ts",
    "clean:icons": "rimraf packages/icons/src/{index,style}.ts packages/icons/*.{js,js.map,d.ts,d.ts.map} packages/mdui/src/icons/*.ts",
    "clean:themes": "rimraf packages/themes/*.css",
    "clean:mdui": "rimraf packages/mdui/{components,icons}",
    "clean": "npm-run-all clean:*",
    "build:shared": "npm run lint:shared && npm run clean:shared && tsc -p packages/shared/tsconfig.json",
    "build:jq": "npm run lint:jq && npm run clean:jq && tsc -p packages/jq/tsconfig.json",
    "build:components": "npm run lint:components && npm run clean:components && node scripts/components/build_less.js && tsc -p packages/components/tsconfig.json && node scripts/components/build_js.js",
    "build:icons": "npm run clean:icons && node scripts/icons/build_less.js && node scripts/icons/generate_icons.js && tsc -p packages/icons/tsconfig.json && node scripts/icons/build_js.js",
    "build:themes": "npm run lint:themes && npm run clean:themes && node scripts/themes/build.js",
    "build:mdui": "npm run clean:mdui && tsc -p packages/mdui/tsconfig.json",
    "build": "npm-run-all build:*",
    "bundle:jq": "npm run build:jq && rollup -c scripts/jq/rollup.config.js",
    "bundle:components": "npm run build:components && rollup -c scripts/components/rollup.config.js",
    "bundle": "npm-run-all bundle:*",
    "test:jq": "eslint --fix packages/jq/__test__/**/*.ts && tsc -p packages/jq/__test__/tsconfig.json && web-test-runner --config scripts/jq/web-test-runner.config.js",
    "test:components": "eslint --fix packages/components/src/*/__test__/**/*.ts && web-test-runner --config scripts/components/web-test-runner.config.js",
    "test": "npm-run-all test:*",
    "dev:components": "concurrently -k -r \"node scripts/components/dev.js\" \"tsc --watch --preserveWatchOutput -p packages/components/tsconfig.json\"",
    "dev:icons": "concurrently -k -r \"node scripts/icons/dev.js\" \"tsc --watch --preserveWatchOutput -p packages/icons/tsconfig.json\"",
    "dev": "npm run build && concurrently -k -r \"npm:dev:*\" \"vite --config scripts/vite.config.js\""
  },
  "devDependencies": {
    "@material-design-icons/svg": "^0.10.4",
    "@open-wc/testing": "^3.0.3",
    "@rollup/plugin-commonjs": "^18.1.0",
    "@rollup/plugin-node-resolve": "^13.1.1",
    "@types/jquery": "^3.5.11",
    "@types/vfile-message": "1.0.1",
    "@typescript-eslint/eslint-plugin": "^5.8.1",
    "@typescript-eslint/parser": "^5.8.1",
    "@web/dev-server-rollup": "^0.3.13",
    "@web/test-runner": "^0.13.23",
    "@web/test-runner-playwright": "^0.8.8",
    "autoprefixer": "^10.4.0",
    "clean-css": "^5.2.2",
    "concurrently": "^6.5.1",
    "eslint": "^8.5.0",
    "eslint-config-prettier": "^8.3.0",
    "eslint-plugin-import": "^2.25.3",
    "eslint-plugin-lit": "^1.6.1",
    "eslint-plugin-prettier": "^4.0.0",
    "jquery": "^3.6.0",
    "less": "^4.1.2",
    "lint-staged": "^12.1.4",
    "minify-html-literals": "^1.3.5",
    "node-watch": "^0.7.2",
    "npm-run-all": "^4.1.5",
    "postcss": "^8.4.5",
    "postcss-less": "^5.0.0",
    "pretender": "^3.4.7",
    "prettier": "^2.5.1",
    "rimraf": "^3.0.2",
    "rollup": "^2.62.0",
    "rollup-plugin-terser": "^7.0.2",
    "rollup-plugin-visualizer": "^5.5.2",
    "stylelint": "^14.2.0",
    "stylelint-config-rational-order": "^0.1.2",
    "stylelint-config-standard": "^24.0.0",
    "typescript": "^4.5.4",
    "vite": "^2.7.9",
    "web-component-analyzer": "^1.1.6",
    "yorkie": "^2.0.0"
  },
  "gitHooks": {
    "pre-commit": "lint-staged"
  },
  "lint-staged": {
    "*.less": [
      "stylelint --fix"
    ],
    "*.ts": [
      "eslint --fix",
      "prettier --write"
    ]
  },
  "engines": {
    "node": ">=16",
    "pnpm": ">=6"
  }
}
