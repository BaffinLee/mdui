{
  "private": true,
  "scripts": {
    "postinstall": "lerna bootstrap --hoist",
    "bootstrap": "lerna bootstrap --hoist",
    "lint:shared": "eslint --fix packages/shared/src/**/*.ts",
    "lint:jq": "eslint --fix packages/jq/src/**/*.ts",
    "lint:components": "stylelint --fix --syntax less packages/components/src/**/*.less && eslint --fix packages/components/src/**/*.ts",
    "lint:themes": "stylelint --fix --syntax less packages/themes/**/*.less",
    "lint": "npm-run-all lint:*",
    "clean:shared": "rimraf packages/shared/{controllers,decorators,directives,helpers,icons,mixins} packages/shared/*.{js,d.ts,js.map}",
    "clean:jq": "rimraf packages/jq/{functions,methods,shared,static} packages/jq/*.{js,d.ts,js.map}",
    "clean:components": "rimraf packages/components/{button,checkbox,icon,link,surface} packages/components/*.{js,d.ts,js.map} packages/components/src/**/*style.ts",
    "clean:icons": "",
    "clean:themes": "rimraf packages/themes/*.css",
    "clean": "npm-run-all clean:*",
    "build:shared": "npm run lint:shared && npm run clean:shared && tsc -p packages/shared/tsconfig.json",
    "build:jq": "npm run lint:jq && npm run clean:jq && tsc -p packages/jq/tsconfig.json",
    "build:components": "npm run lint:components && npm run clean:components && node scripts/components/build_less.js && tsc -p packages/components/tsconfig.json && node scripts/components/build_js.js",
    "build:themes": "npm run lint:themes && npm run clean:themes && node scripts/themes/build.js",
    "build": "npm-run-all build:*",
    "bundle:jq": "npm run build:jq && rollup -c scripts/jq/rollup.config.js",
    "bundle:components": "npm run build:components && rollup -c scripts/components/rollup.config.js",
    "bundle": "npm-run-all bundle:*",
    "test:jq": "eslint --fix packages/jq/__test__/**/*.ts && tsc -p packages/jq/__test__/tsconfig.json && web-test-runner --config scripts/jq/web-test-runner.config.js",
    "test:components": "eslint --fix packages/components/src/*/__test__/**/*.ts && web-test-runner --config scripts/components/web-test-runner.config.js",
    "test": "npm-run-all test:*",
    "dev:components": "npm run build:components && concurrently -k -r \"node scripts/components/dev.js\" \"tsc --watch --preserveWatchOutput -p packages/components/tsconfig.json\" \"vite --config scripts/components/vite.config.js\""
  },
  "devDependencies": {
    "@material-icons/svg": "github:material-icons/material-icons#original",
    "@open-wc/testing": "^3.0.0-next.1",
    "@rollup/plugin-alias": "^3.1.2",
    "@rollup/plugin-commonjs": "^18.0.0",
    "@rollup/plugin-node-resolve": "^13.0.0",
    "@types/jquery": "^3.5.5",
    "@typescript-eslint/eslint-plugin": "^4.23.0",
    "@typescript-eslint/parser": "^4.23.0",
    "@web/dev-server-rollup": "^0.3.4",
    "@web/test-runner": "^0.13.4",
    "@web/test-runner-commands": "^0.4.5",
    "@web/test-runner-playwright": "^0.8.5",
    "autoprefixer": "^10.2.5",
    "clean-css": "^5.1.2",
    "concurrently": "^6.1.0",
    "eslint": "^7.26.0",
    "eslint-config-prettier": "^8.3.0",
    "eslint-plugin-import": "^2.23.2",
    "eslint-plugin-lit": "^1.4.1",
    "eslint-plugin-prettier": "^3.4.0",
    "husky": "^6.0.0",
    "jquery": "^3.6.0",
    "lerna": "^4.0.0",
    "less": "^4.1.1",
    "lint-staged": "^11.0.0",
    "minify-html-literals": "^1.3.5",
    "node-watch": "^0.7.1",
    "npm-run-all": "^4.1.5",
    "postcss": "^8.2.15",
    "pretender": "^3.4.3",
    "prettier": "^2.3.0",
    "rimraf": "^3.0.2",
    "rollup": "^2.48.0",
    "rollup-plugin-copy": "^3.4.0",
    "rollup-plugin-terser": "^7.0.2",
    "rollup-plugin-visualizer": "^5.5.0",
    "stylelint": "^13.13.1",
    "stylelint-config-rational-order": "^0.1.2",
    "stylelint-config-standard": "^22.0.0",
    "typescript": "^4.2.4",
    "vite": "^2.3.2",
    "web-component-analyzer": "^1.1.6"
  },
  "lint-staged": {
    "*.less": [
      "stylelint --fix"
    ],
    "*.ts": [
      "eslint --fix",
      "prettier --write"
    ]
  },
  "engines": {
    "node": ">=12",
    "npm": ">=6"
  }
}
