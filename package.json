{
  "private": true,
  "workspaces": [
    "packages/**"
  ],
  "scripts": {
    "preinstall": "npx -y only-allow pnpm",
    "clean:shared": "rimraf packages/shared/{variables,controllers,decorators,directives,helpers,mixins} packages/shared/*.{js,js.map,d.ts,d.ts.map} packages/shared/variables.less",
    "clean:jq": "rimraf packages/jq/{functions,methods,shared,static} packages/jq/*.{js,js.map,d.ts,d.ts.map}",
    "clean:icons": "rimraf packages/icons/src/*.ts packages/icons/src/shared/style.ts packages/icons/*.{js,d.ts}",
    "clean:components": "rimraf packages/components/{button,checkbox,icon} packages/components/*.{js,js.map,d.ts,d.ts.map} packages/components/src/**/*style.ts",
    "clean:mdui": "rimraf packages/mdui/{components,functions} packages/mdui/*.{js,js.map,d.ts,d.ts.map} packages/mdui/mdui.css",
    "clean": "run-p clean:*",
    "lint:shared": "stylelint --fix packages/shared/src/**/*.less && eslint --fix packages/shared/src/**/*.ts",
    "lint:jq": "eslint --fix packages/jq/src/**/*.ts",
    "lint:icons": "stylelint --fix packages/icons/src/shared/**/*.less && eslint --fix packages/icons/src/shared/**/*.ts",
    "lint:components": "stylelint --fix packages/components/src/**/*.less && eslint --fix packages/components/src/**/*.ts",
    "lint:mdui": "stylelint --fix packages/mdui/src/styles/**/*.less && eslint --fix packages/mdui/src/{components,functions}/*.ts",
    "lint": "run-p lint:*",
    "analyze:components": "cem analyze --config \"scripts/components/custom-elements-manifest.js\"",
    "analyze:icons": "cem analyze --config \"scripts/icons/custom-elements-manifest.js\"",
    "vscode:components": "node scripts/components/build-vscode-data.js",
    "vscode:icons": "node scripts/icons/build-vscode-data.js",
    "webtypes:components": "node scripts/components/build-web-types.js",
    "webtypes:icons": "node scripts/icons/build-web-types.js",
    "build:shared": "node scripts/shared/build-less.js && tsc -p packages/shared/tsconfig.json",
    "build:jq": "tsc -p packages/jq/tsconfig.json",
    "build:icons": "node scripts/icons/build-less.js && node scripts/icons/make-icons.js && tsc -p packages/icons/tsconfig.json && node scripts/icons/build-js.js",
    "build:components": "node scripts/components/build-less.js && tsc -p packages/components/tsconfig.json && node scripts/components/build-js.js",
    "build:mdui": "tsc -p packages/mdui/tsconfig.json && node scripts/mdui/build-less.js",
    "build": "npm-run-all -p clean lint -s build:shared -p build:jq build:icons -s build:components build:mdui analyze:* -p vscode:* webtypes:*",
    "build-dev": "npm-run-all -p clean lint -s build:shared -p build:jq \"build:icons -- --dev\" -s \"build:components -- --dev\" \"build:mdui -- --dev\"",
    "bundle:jq": "rollup -c scripts/jq/rollup.config.js",
    "bundle:components": "rollup -c scripts/components/rollup.config.js",
    "bundle": "run-s build bundle:*",
    "test:jq": "eslint --fix packages/jq/__test__/**/*.ts && tsc -p packages/jq/__test__/tsconfig.json && web-test-runner --config scripts/jq/web-test-runner.config.js",
    "test:components": "eslint --fix packages/components/__test__/**/*.ts && tsc -p packages/components/__test__/tsconfig.json && web-test-runner --config scripts/components/web-test-runner.config.js",
    "test": "run-s test:*",
    "watch:shared": "tsc --watch --preserveWatchOutput -p packages/shared/tsconfig.json",
    "watch:jq": "tsc --watch --preserveWatchOutput -p packages/jq/tsconfig.json",
    "watch:icons": "tsc --watch --preserveWatchOutput -p packages/icons/tsconfig.json",
    "watch:components": "tsc --watch --preserveWatchOutput -p packages/components/tsconfig.json",
    "watch:mdui": "tsc --watch --preserveWatchOutput -p packages/mdui/tsconfig.json",
    "dev:shared": "node scripts/shared/dev.js --dev",
    "dev:icons": "node scripts/icons/dev.js --dev",
    "dev:components": "node scripts/components/dev.js --dev",
    "dev:mdui": "node scripts/mdui/dev.js --dev",
    "dev": "npm run build-dev && concurrently -k -r \"npm:watch:*\" \"npm:dev:*\" \"vite --config scripts/vite.config.js --host\"",
    "pack": "npm run build && npm pack --workspaces",
    "export-png-icons": "node scripts/icons/export-png.js"
  },
  "devDependencies": {
    "@custom-elements-manifest/analyzer": "^0.5.7",
    "@material-design-icons/svg": "^0.10.5",
    "@open-wc/testing": "^3.0.3",
    "@rollup/plugin-commonjs": "^18.1.0",
    "@rollup/plugin-node-resolve": "^13.1.3",
    "@types/jquery": "^3.5.11",
    "@types/vfile-message": "1.0.1",
    "@typescript-eslint/eslint-plugin": "^5.9.0",
    "@typescript-eslint/parser": "^5.9.0",
    "@web/dev-server-rollup": "^0.3.14",
    "@web/test-runner": "^0.13.25",
    "@web/test-runner-playwright": "^0.8.8",
    "autoprefixer": "^10.4.2",
    "clean-css": "^5.2.2",
    "concurrently": "^7.0.0",
    "eslint": "^8.6.0",
    "eslint-config-prettier": "^8.3.0",
    "eslint-plugin-import": "^2.25.4",
    "eslint-plugin-lit": "^1.6.1",
    "eslint-plugin-prettier": "^4.0.0",
    "jquery": "^3.6.0",
    "less": "^4.1.2",
    "less-plugin-npm-import": "^2.1.0",
    "lint-staged": "^12.1.7",
    "minify-html-literals": "^1.3.5",
    "node-watch": "^0.7.2",
    "npm-run-all": "^4.1.5",
    "postcss": "^8.4.5",
    "postcss-less": "^6.0.0",
    "pretender": "^3.4.7",
    "prettier": "^2.5.1",
    "rimraf": "^3.0.2",
    "rollup": "^2.63.0",
    "rollup-plugin-terser": "^7.0.2",
    "rollup-plugin-visualizer": "^5.5.2",
    "stylelint": "^14.2.0",
    "stylelint-config-rational-order": "^0.1.2",
    "stylelint-config-standard": "^24.0.0",
    "svgexport": "^0.4.2",
    "typescript": "^4.5.4",
    "vite": "^2.7.10",
    "yorkie": "^2.0.0"
  },
  "gitHooks": {
    "pre-commit": "lint-staged"
  },
  "lint-staged": {
    "*.less": [
      "stylelint --fix"
    ],
    "*.ts": [
      "eslint --fix",
      "prettier --write"
    ]
  },
  "engines": {
    "node": ">=16",
    "pnpm": ">=6"
  }
}
